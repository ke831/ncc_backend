{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",			
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/pages/summary", "dest": "/api/index.js" },
    { "src": "/api/pages", "dest": "/api/index.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)", "dest": "/api/index.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)/texts", "dest": "/api/index.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)/details", "dest": "/api/index.js" },
    { "src": "/api/health", "dest": "/api/index.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ]
}
