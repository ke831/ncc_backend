{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",			
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/pages/summary", "dest": "/api/summary.js" },
    { "src": "/api/pages", "dest": "/api/index.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)", "dest": "/api/pages-id.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)/texts", "dest": "/api/pages-id-texts.js" },
    { "src": "/api/pages/([a-zA-Z0-9_-]+)/details", "dest": "/api/pages-id-details.js" },
    { "src": "/api/", "dest": "/api/index.js" }

  ]
}
